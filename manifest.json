{
  "manifest_version": 2,

  "name": "D&D Initiative Tracker",
  "description": "This extension displays character data for simple initiative tracking.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
	"default_title": "D&D Initiative Tracker"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
